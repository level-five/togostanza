<!DOCTYPE html>

<html>
  <head>
    <title>Protein Names</title>
    {{#each css_uri}}
    <link rel="stylesheet" href="{{this}}" />
    {{/each}}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/bootstrap.min.js"></script>
    {{adjust_iframe_height_script}}
    {{download_csv}}
    {{download_json}}
  </head>

  <body>
    <table class='table'>
      <tbody>
        {{#if summary}}
        <tr>
          <th class='span4'>Protein names</th>
          <td class='span8'>
            <table class='table'>
              <tbody>
                {{#if summary.recommended_name}}
                  <tr><th class='span4'>Recommended Name</th><td class='span4'>{{summary.recommended_name}}</td></tr>
                {{/if}}

                {{#if summary.ec_name}}
                  <tr><th class='span4'>EC number</th><td class='span4'>{{summary.ec_name}}</td></tr>
                {{/if}}

                {{#if summary.alternative_names}}
                  <tr>
                    <th class='span4'>Alternative Name(s)</th>
                    <td class='span4'>
                      <ul>
                        {{#each summary.alternative_names}}
                          <li>{{this}}</li>
                        {{/each}}
                      </ul>
                    </td>
                  </tr>
                {{/if}}
              </tbody>
            </table>
          </td>
        </tr>
        {{/if}}
        {{#if genes}}
          <tr>
            <th class='span4'>Gene names</th>
            <td class='span8'>
 
                <table class='table'>
                  <tbody>
                    {{#if genes.gene_name}}
		    <tr>
		      <th class='span4'>Name</th>
		      <td class='span4'><ul>{{#each genes.gene_name}}<li>{{this}}</li>{{/each}}</ul></td>
		    </tr>
		    {{/if}}
                    {{#if genes.synonyms_name}}
		    <tr>
		      <th class='span4'>Synonyms</th>
		      <td class='span4'><ul>{{#each genes.synonyms_name}}<li>{{this}}</li>{{/each}}</ul></td>
		    </tr>
		    {{/if}}
                    {{#if genes.locus_name}}
		    <tr>
		      <th class='span4'>Ordered Locus Names</th>
		      <td class='span4'><ul>{{#each genes.locus_name}}<li>{{this}}</li>{{/each}}</ul></td>
		    </tr>
		    {{/if}}
                    {{#if genes.orf_name}}
		    <tr>
		      <th class='span4'>ORF Names</th>
		      <td class='span4'><ul>{{#each genes.orf_name}}<li>{{this}}</li>{{/each}}</ul></td>
		    </tr>
		    {{/if}}
                  </tbody>
                </table>
            </td>
          </tr>
        {{else}}
          {{#unless summary}}
            No data
          {{/unless}}
        {{/if}}

        {{#if summary.organism_name}}
          <tr><th>Organism</th><td>{{summary.organism_name}}</td></tr>
        {{/if}}

        {{#if summary.taxonomy_id}}
          <tr><th>Taxonomic identifier</th><td>{{summary.taxonomy_id}}</td></tr>
        {{/if}}

        {{#if summary.parent_taxonomy_names}}
          <tr>
            <th>Taxonomic lineage</th>
            <td>
              <ul>
                {{#each summary.parent_taxonomy_names}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </body>
</html>

