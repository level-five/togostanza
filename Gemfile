source 'https://rubygems.org'

gem 'rails'

gem 'pg'
gem 'haml-rails'
gem 'jquery-rails'
gem 'action_args'
gem 'sparql-client'
gem 'flavour_saver'

group :development do
  gem 'tapp'
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
